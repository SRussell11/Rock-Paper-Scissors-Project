        "#Rock Paper Scissor Game\n",
        "\n",
        "rock = 1\n",
        "paper = 2\n",
        "scissor = 3\n",
        "names = {rock : \"Rock\", paper : \"Paper\", scissor : \"Scissor\"}\n",
        "#Rules that Define a Player Winning the game \n",
        "condition = {rock : scissor, paper : rock, scissor : rock}\n",
        "#Start player's score at 0\n",
        "player1_score = 0\n",
        "player2_score = 0\n",
        "\n",
        "# start the game\n",
        "def start():\n",
        "    print(\"Let's start the Game of Rock, Paper and Scissor\")\n",
        "    while game():\n",
        "        pass\n",
        "    scores()\n",
        "def game():\n",
        "    \"\"\"This calls for player's move and passes the player's choice to result function to compare both\"\"\"\n",
        "    player1 = move()\n",
        "    #player2 makes a move out [1, 2, 3]\n",
        "    player2 = move()\n",
        "    #check for result player1 and player2 move\n",
        "    result(player1, player2)\n",
        "    return (play_again())\n",
        "\n",
        "def move():\n",
        "    \"\"\"This allows player a choice of either Rock, Paper or Scissor\"\"\"\n",
        "    while True:\n",
        "        print()\n",
        "        player2  = input(\"Rock = 1\\n Paper = 2\\nScissor = 3\\nMake A Move : \")\n",
        "        try :\n",
        "            #check if player entered a valid input\n",
        "            player2 = int(player2)\n",
        "            if player2 in [1,2,3]:\n",
        "                return player2\n",
        "            #if invalid input raise Error\n",
        "        except ValueError:\n",
        "            pass\n",
        "    print('Please enter 1, 2 or 3')\n",
        "\n",
        "def result(player1, player2):\n",
        "    \"\"\"Evaluates the result out of Player1's Choice and Player2's Choice\"\"\"\n",
        "    for i in range(1,4):\n",
        "        print(\".\"*i,)    \n",
        "    # print Player2's choice out of [1, 2, 3]\n",
        "    print(\"Player2 threw {0}!\".format(names[player2]))\n",
        "    global player1_score, player2_score\n",
        "    #if choice of Player1 and Player2 are equal print Tie Game\n",
        "    if player1 == player2:\n",
        "        print(\"Tie Game\")\n",
        "    else:\n",
        "        #check if Player's Choice is a win for Player\n",
        "        if condition[player1] == player2:\n",
        "            print(\"Yayy!! You have won\")\n",
        "            player1_score += 1\n",
        "        #if not return Player lost\n",
        "        else:\n",
        "            print('You lost please try again')\n",
        "            player2_score += 1\n",
        "\n",
        "def play_again():\n",
        "    \"\"\"Prompts User To Play again\"\"\"\n",
        "    scores()\n",
        "    answer = input(\"Would You Like To play Again (y/n):\")\n",
        "    if answer in [\"y\", \"Y\"]:\n",
        "        return answer\n",
        "    else:\n",
        "        #if player says no then greet him and exit()\n",
        "        print(\"Thank You very much for playing Rock, Paper, Scissors. See you next Time!.\")\n",
        "        quit=input('Type \"enter\" to quit:')\n",
        "\n",
        "def scores(): \n",
        "    \"\"\"prints Scores of both player1 and player2\"\"\"\n",
        "    global player1_score, player2_score\n",
        "    print(\"HIGH SCORES\")\n",
        "    print(\"Player1 :\",player1_score)\n",
        "    print(\"Player2 : \",player2_score)\n",
        "if __name__ == \"__main__\":\n",
        "    start()\n",
        "\n",
        "\n"
      ]
